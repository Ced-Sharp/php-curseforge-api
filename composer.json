{
    "name": "cedsharp/curse-tools-api",
    "description": "PHP Client for the CurseForge API, using the Curse Tools proxy.",
    "keywords": [
        "curseforge",
        "curse.tools",
        "mods",
        "plugins",
        "php",
        "api"
    ],
    "homepage": "https://github.com/Ced-Sharp/php-curseforge-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Aternos GmbH",
            "homepage": "https://aternos.gmbh"
        },
        {
            "name": "Ced-Sharp",
            "homepage": "https://cedsharp.ca"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.3",
        "guzzlehttp/psr7": "^1.7 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2",
        "friendsofphp/php-cs-fixer": "^3.5"
    },
    "autoload": {
        "psr-4": { "Aternos\\CurseForgeApi\\" : "lib/" }
    },
    "autoload-dev": {
        "psr-4": { "Aternos\\CurseForgeApi\\Tests\\" : "tests/" }
    }
}
